<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView android:id="@+id/contact_list_cv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="0dp"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView android:id="@+id/contact_list_ppicture"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="PP"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:background="@color/teal"/>

            <TextView android:id="@+id/contact_list_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/contact_list_ppicture"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Name"
                android:textSize="20dp"/>

            <Button android:id="@+id/contact_list_stars"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="Stars"
                android:textSize="14dp"/>

            <TextView android:id="@+id/contact_list_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/contact_list_name"
                android:visibility="invisible"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="id"
                android:textSize="20dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>